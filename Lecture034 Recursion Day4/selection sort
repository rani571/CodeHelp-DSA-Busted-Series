#include <iostream>

using namespace std;

void SelectionSort(int arr[],int n){
    
    if(n == 0 || n == 1){
        return ;
    }
    
    for(int j=1; j<n; j++){
        if(arr[0]>arr[j]){
            swap(arr[0],arr[j]);
        }
    }
    
    
    SelectionSort(arr+1,n-1);
}

int main()
{
    int arr[100];
    int n;
    cout<<"enter the size of array : ";
    cin>>n;
    cout<<"enter the element of array : ";
    for(int i=0; i<n; i++){
        cin>>arr[i];
    }
    cout<<endl;
    cout<<"array after sorting : ";
    SelectionSort(arr,n);
    for(int i=0; i<n; i++){
        cout<<arr[i]<<" " ;
    }
}
